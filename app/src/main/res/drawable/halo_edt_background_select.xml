<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/halo_edt_corner_radius" />
            <padding android:bottom="@dimen/halo_edt_padding_bottom" android:left="@dimen/halo_edt_padding_left" android:right="@dimen/halo_edt_padding_right" android:top="@dimen/halo_edt_padding_top" />
            <solid android:color="@color/halo_edt_background_solid" />
            <stroke android:width="0dp" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/halo_edt_corner_radius" />
            <padding android:bottom="@dimen/halo_edt_padding_bottom" android:left="@dimen/halo_edt_padding_left" android:right="@dimen/halo_edt_padding_right" android:top="@dimen/halo_edt_padding_top" />
            <solid android:color="@color/halo_btn_bg_color_disabled" />
            <stroke android:width="0dp" />
        </shape>
    </item>

</selector>
